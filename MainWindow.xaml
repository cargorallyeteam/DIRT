<Controls:MetroWindow x:Class="DR2Rallymaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DR2Rallymaster"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:Icons="clr-namespace:MahApps.Metro.IconPacks;assembly=MahApps.Metro.IconPacks.Modern"
        mc:Ignorable="d"
        Title="DR2 Rallymaster" Height="450" Width="800"
        Closing="MetroWindow_Closing">

    <!-- Creates the "RightWindowCommand" that has the settings cog -->
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Name="btnSettings" Click="Button_Click">
                <Icons:Modern Width="15" Height="15" Kind="Settings" />
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Name="menuItemThemes" Header="Base Themes" />
                        <MenuItem Name="menuItemAccents" Header="Accents" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    
    <!-- Main content body-->
    <Grid>
        <!-- Grid defs -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Grid content -->
        <Button Name="logIn" Grid.Row="0" Grid.Column="0" Click="LogIn_Click">Log Into Racenet</Button>
        <TextBox Name="clubId" Grid.Row="1" Grid.Column="0"
                 Controls:TextBoxHelper.Watermark="Club ID"
                 Controls:TextBoxHelper.ClearTextButton="True" />
        <Button Name="clubSearch" Grid.Row="1" Grid.Column="1" Click="ClubSearch_Click">Search</Button>
    </Grid>
</Controls:MetroWindow>
